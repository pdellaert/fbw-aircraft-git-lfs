{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Setup",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/dev-env/run.sh npm i",
      "windows": {
        "command": "${workspaceFolder}/scripts/dev-env/run.cmd npm i",
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/dev-env/run.sh npx igniter",
      "windows": {
        "command": "${workspaceFolder}/scripts/dev-env/run.cmd npx igniter",
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Watch",
      "type" : "shell",
      "command": "rollup -wc ./src/instruments/buildSrc/simulatorBuild.mjs",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
